{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["dimension", "score", "issues", "summary", "positive_findings", "files_reviewed"],
  "additionalProperties": false,
  "properties": {
    "dimension": {
      "type": "string",
      "enum": ["code_quality", "testing", "ui_ux", "responsive_design", "security", "performance"]
    },
    "score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "confidence", "title", "description", "files", "recommendation", "category"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string", "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW"] },
          "confidence": { "type": "integer", "minimum": 0, "maximum": 100 },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["path", "line"],
              "additionalProperties": false,
              "properties": {
                "path": { "type": "string" },
                "line": { "type": "integer" }
              }
            }
          },
          "recommendation": { "type": "string" },
          "category": { "type": "string" }
        }
      }
    },
    "summary": { "type": "string" },
    "positive_findings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "files_reviewed": { "type": "integer" }
  }
}
